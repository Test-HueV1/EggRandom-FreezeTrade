local function createButton(text, color)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(0.85, 0, 0, 30)
	btn.Text = text
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 13
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.BackgroundColor3 = color
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 8)
	btn.Parent = ButtonContainer
	return btn
end

local FreezeButton = createButton("FREEZE TRADE", Color3.fromRGB(240, 180, 60))
local ForceButton = createButton("FORCE TRADE PETS", Color3.fromRGB(160, 120, 255))
local AcceptButton = createButton("AUTO ACCEPT", Color3.fromRGB(70, 200, 120))
local EggRandomizerButton = createButton("EGG RANDOMIZER", Color3.fromRGB(150, 70, 200))

-- Notification Logic
local function notify(txt)
	game.StarterGui:SetCore("SendNotification", {
		Title = "Trade Assist",
		Text = txt,
		Duration = 2,
	})
end

FreezeButton.MouseButton1Click:Connect(function() notify("Trade frozen!") end)
ForceButton.MouseButton1Click:Connect(function() notify("Force trade triggered!") end)
AcceptButton.MouseButton1Click:Connect(function() notify("Auto accept triggered!") end)

--- COOLDOWN LOGIC (Already present in original script) ---
local COOLDOWN_TIME = 3 * 60 -- 3 minutes in seconds
local lastRandomizerTime = 0 -- The time the button was last clicked

local function formatTimeTwo(seconds) -- Renamed to avoid conflict
    local minutes = math.floor(seconds / 60)
    local remainingSeconds = math.floor(seconds % 60)
    return string.format("%02i:%02i", minutes, remainingSeconds)
end

local function updateRandomizerButton()
    local currentTime = os.time()
    local timeElapsed = currentTime - lastRandomizerTime
    local timeLeft = COOLDOWN_TIME - timeElapsed

    if timeLeft > 0 then
        -- Cooldown is active
        EggRandomizerButton.Text = "🔒 " .. formatTimeTwo(timeLeft)
        EggRandomizerButton.BackgroundColor3 = Color3.fromRGB(75, 75, 85) -- Darker/Locked color
        EggRandomizerButton.TextSize = 16
        EggRandomizerButton.Active = false
    else
        -- Cooldown is finished
        EggRandomizerButton.Text = "EGG RANDOMIZER"
        EggRandomizerButton.BackgroundColor3 = Color3.fromRGB(150, 70, 200) -- Original color
        EggRandomizerButton.TextSize = 13
        EggRandomizerButton.Active = true
    end
end

-- Update the button text every frame for a smooth countdown
RunService.Heartbeat:Connect(updateRandomizerButton)

-- Egg Randomizer Button Logic
EggRandomizerButton.MouseButton1Click:Connect(function()
    local currentTime = os.time()
    local timeElapsed = currentTime - lastRandomizerTime

    if timeElapsed >= COOLDOWN_TIME then
        -- Button is ready, so execute the action and start the cooldown
        lastRandomizerTime = currentTime
        notify("Egg Randomizer triggered! Next use in 3 minutes.")

        -- Add your actual Egg Randomizer function/code here

        -- Immediately update the button's appearance to show the lock/countdown
        updateRandomizerButton()
    end
    -- If timeElapsed < COOLDOWN_TIME, the button is locked (handled by updateRandomizerButton)
end)
--- END COOLDOWN LOGIC ---

